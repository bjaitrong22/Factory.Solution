@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div class = "container">
  <h2>Assign An Engineer</h2>
  <hr />
  <br>
  <h4>Assign an engineer to this machine: @Html.DisplayFor(model => model.MachineName)</h4>

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.MachineId)

    @Html.Label("Select Engineer")
    @Html.DropDownList("EngineerId")

    <input type = "submit" value = "Save" class = "btn btn-primary" />
  }

  <br>
  <p>@Html.ActionLink("Manage machine", "Index")</p>
</div>