@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div class = "container">
  <h1 class="text-danger"><strong>Delete</strong></h1>
  <hr />
  <br>
  <h2 class="text-danger"><strong>Are you sure you want to delete this machine from the system?</strong></h2>

  <p class="text-danger"><strong>Machine Name:</strong> @Html.DisplayFor(model => model.MachineName)</p>
  @using (Html.BeginForm())
  {
    <input type = "submit" value = "Delete" class="btn btn-danger" />
  }
  <br>
  @Html.ActionLink("Manage machines", "Index")
</div>