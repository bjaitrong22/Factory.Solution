@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<div class = "container">
  <h2>Delete</h2>
  <hr />
  <br>
  <h2>Are you sure you want to delete this machine from the system?</h2>

  <p>Machine Name: @Html.DisplayFor(model => model.MachineName)</p>
  @using (Html.BeginForm())
  {
    <input type = "submit" value = "Delete" class="btn btn-danger" />
  }

  <br>
  @Html.ActionLink("Manage machines", "Index")
</div>