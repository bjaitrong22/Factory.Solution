@{
  Layout = "_Layout";
}

@using Factory.Models;

<div class = "container">
  <h1>Welcome to Dr. Sillystringz's Factory Administrative Site</h1>
  <hr />
  <br>
  <h3>Engineers</h3>
  @if (@Model["Engineers"].Length == 0)
  {
    <h5 class="text-info">No engineers have been added yet!</h5>
  }
  else
  {
    <ul>
      @foreach(Engineer engineer in Model["Engineers"])
      {
        <li>@Html.ActionLink($"{engineer.FirstName} {engineer.LastName}", "Details", "Engineers", new {id = @engineer.EngineerId})</li>
      }
    </ul>
  }

  <h3>Machines</h3>
  @if (Model["Machines"].Length == 0)
  {
    <h5 class="text-info">No machines have been added yet!</h5>
  }
  else
  {     
    <ul>
      @foreach (Machine machine in Model["Machines"])
      {
        <li>@Html.ActionLink(@machine.MachineName, "Details", "Machines", new {id = @machine.MachineId})</li>
      }
    </ul>
  }
  <br>
  <p>@Html.ActionLink("Manage engineers", "Index", "Engineers")</p>
  <p>@Html.ActionLink("Manage machines", "Index", "Machines")</p>
</div>

