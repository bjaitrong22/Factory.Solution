@{
  Layout = "_Layout";
}

@using Factory.Models;

<div class = "container">
  <h1>Engineers</h1>
  <hr />
  <br>
  @if (@Model.Count == 0)
  {
    <h3>There are no engineers in the system!"</h3>
  }
  else
  {
    <ul>
      @foreach (Engineer engineer in Model)
      {
        <li>@Html.ActionLink($"{engineer.FirstName} {engineer.LastName}", "Details", new {id = engineer.EngineerId})</li>
      }
    </ul>

  }

<p>@Html.ActionLink("Add a new Engineer", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>