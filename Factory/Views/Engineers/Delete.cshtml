@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<div class="container">
  <h2>Delete</h2>
  <hr />
  <br>
  <h2>Are you sure you want to delete this engineer from the system?</h2>

  <p id = "deleteEngineer"> Engineer: @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName) </p> 

  @using (Html.BeginForm())
  {
    <input type = "submit" value = "Delete" class="btn btn-danger" />
  }

  <br>

  @Html.ActionLink("Manage engineers", "Index")
</div>